{
    "compilerOptions": {
		"charset": "utf-8",
		"module": "commonjs",
		"outDir": "./dist",
        "target": "es6",
		"removeComments": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "./node_modules",
        "./node_modules/**",
    ]
}